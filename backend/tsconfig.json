{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "lib": ["es2016"],
        "outDir": "dist",
        "rootDir": "src",
        "allowJs": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],

    },
    "include": [
        "./src/**/*"
    ]
}